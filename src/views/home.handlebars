<main>
  <h1>{{title}}</h1>

  <div class="card">
    {{#each products}}
      <div class="product-card">
        <a href="#">
          <img class="product-image" src="{{thumbnails.[0]}}" alt="{{title}}" />
        </a>
        <div class="product-details">
          <a href="#">
            <h5 class="product-title">{{title}}</h5>
          </a>
          <p class="product-description">{{ description.[0] }}</p>
          <a href="#" class="read-more-btn">Read more
            <svg
              class="arrow-icon"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 14 10"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
              />
            </svg>
          </a>
        </div>
      </div>

    {{/each}}
  </div>
</main>
